@import "../../variables.styl"

.c-predictions
    position relative

    .header
        font-family Josefin
        color color-secondary

    .filters-wrapper
        display flex

    .subtitle-filters
        margin 5px 0 10px 0
        padding 0

    .expander-filters
        font-size 17px
        width 160px
        height 20px
        position relative
        transition all 0.2s
        span
            font-size 18px
            font-weight 600
            transition all 0.2s
        &:hover
            .list-filters
                height auto
                opacity 1

    .Tag-inactive
        color grey

    .addOn-1
        width 180px

    .button-reset-filters
        position absolute
        top 0
        right 0
        font-size 15px
        font-weight 500
        width 120px
        height 25px
        color color-primary
        background-color color-tertiary
        border 1px solid color-primary
        border-radius 3px
        transition all 0.2s
        &:hover
          background-color color-primary
          color color-tertiary

    .list-filters
        list-style-type none
        position absolute
        top: 5px
        left 0
        border 1px solid color-primary
        border-radius 3px
        padding 0
        overflow: hidden
        height 0
        opacity 0
        transition all 0.2s
        li
            margin 0
            padding 0
    #display-none
        display none
    .button-filters
        font-size 16px
        color color-primary
        width 120px
        height 40px
        background-color white
        border: 0
        margin 0
        padding 0

.c-discipline
    padding 5px 10px
    margin 5px 0
    border-radius 3px
    border border-primary
    height 25px
    overflow hidden

    .discipline-header
        flex-box(row, none, center)

    .name
        margin 1px 5% 0 0
        width 270px

    .category
        width: 70px
        font-size 19px
        font-weight 700
        margin 0 5% 0 0

    .tags-wrapper
        margin-left 17px
        flex-box(none, none, center)

    .title-tags
        font-size 19px
        font-weight 600
        margin-right 5px

    .list-tags
        display: flex
        margin 0
        padding 0
        list-style-type none
        li
            margin-right 5px

    .content-discipline-wrapper
        flex-box(row, none, flex-start)
        margin-top 10px
        margin-bottom 5px

    .image-discipline
        border-radius 3px
        border border-primary
        width 135px
        height 135px
        object-fit cover

    .breakdown-wrapper
        margin-left 15px

    .title-breakdown
        margin-bottom 4px
        font-size 19px
        font-weight 600

    .list-breakdowns
        padding 0
        margin 0
        font-size 18px
        list-style-type none
